{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": [
      "*.snap",
      "*.css",
      "*.json",
      "*.html"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100
  }
}